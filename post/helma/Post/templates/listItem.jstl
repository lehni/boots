<% $text = Html.stripTags(Markup.encodeText(this.text), 128) || ""; %>
<% $title = this.title ? this.title.trim() : ""; %>
		<td width="75%"><%= this.renderLink($title ? $title.breakAt(30) : $text.cutAt(16)) %></td>
<% if (!param.dontShowUser) %>
		<td nowrap><%= this.renderUser() %></td>
<% end %>
		<td nowrap align="right"><%= app.data.dateMedium.format(this.modificationDate) %></td>
	</tr>
	<tr class="blocks-row-<%= param.style %>">
		<td colspan="3"><%= $text.cutAt(128) %></td>
