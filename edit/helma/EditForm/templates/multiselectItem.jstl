<table width="<%= param.calculatedWidth %>" class="edit-nounderline">
	<tr>
		<td width="<%= param.right ? '50%' : '100%' %>">
			<table width="100%">
				<tr>
<% if (param.sortable) %>
					<td>
						<div><a href="javascript:<% this.handle "multiselect_arrange" <%= param.name %> "up" %>"><img src="/static/edit/assets/arrow-up.gif" width="15" height="15" border="0"></a></div>
						<div><a href="javascript:<% this.handle "multiselect_arrange" <%= param.name %> "down" %>"><img src="/static/edit/assets/arrow-down.gif" width="15" height="15" border="0"></a></div>
					</td>
<% end %>
					<td width="100%">
						<%= param.left %>
					</td>
				</tr>
			</table>
		</td>
<% if (param.right) %>
		<td width="50%">
			<table width="100%">
				<tr>
					<td>
						<div><a href="javascript:<% this.handle "multiselect_arrange" <%= param.name %> "left" %>"><img src="/static/edit/assets/arrow-left.gif" width="15" height="15" border="0"></a></div>
						<div><a href="javascript:<% this.handle "multiselect_arrange" <%= param.name %> "right" %>"><img src="/static/edit/assets/arrow-right.gif" width="15" height="15" border="0"></a></div>
					</td>
					<td width="100%">
						<%= param.right %>
					</td>
				</tr>
			</table>
		</td>
<% end %>
	</tr>
	<tr>
		<td colspan="2">
			<div class="edit-buttons-left"><% if (param.sortable) %><img src="/static/edit/assets/spacer.gif" width="15" height="1"><% end %><%= param.buttons %></div>
		</td>
	</tr>
</table>
<% input type="hidden" name=param.name value=param.ids %>
